# -*- mode: ruby -*-
# vi: set ft=ruby :

baseurl = "https://cpslo.kedwin.chen.network/senior-project/files"
courseurl = "#{baseurl}/2021-spring/csc/422"

Vagrant.configure("2") do |config|
    config.vm.define "testing" do |testing|
        testing.vm.box = "testing"
        testing.vm.hostname = " testing"
        testing.vm.url = "#{courseurl}/testing.box"

        testing.vm.network :private_network, ip: "192.168.22.101"
    end

    config.vm.define "inspection" do |inspection|
        inspection.vm.box = "inspection"
        inspection.vm.hostname = "inspection"
        inspection.vm.url = "#{courseurl}/inspection.box"

        inspection.vm.network :private_network, ip: "192.168.22.102"
    end

    config.vm.define "metasploitable" do |metasploitable|
        metasploitable.vm.box = "metasploitable"
        metasploitable.vm.hostname = "metasploitable"
        metasploitable.vm.url = "#{courseurl}/metasploitable.box"

        metasploitable.vm.network :private_network, ip: "192.168.22.103"
    end

    config.vm.define "client" do |client|
        client.vm.box = "client"
        client.vm.hostname = "client"
        client.vm.url = "#{baseurl}/base/lubuntu-1604-amd64-virtualbox.box"

        client.vm.network :private_network, ip: "192.168.22.104"
    end
end
